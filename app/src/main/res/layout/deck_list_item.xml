<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/deck_list_item_margin_bottom">
    <org.bdaoust.project7capstone.MTGDeckPieChart
        android:id="@+id/deckPieChart"
        android:layout_width="@dimen/mtg_deck_pie_chart_size"
        android:layout_height="@dimen/mtg_deck_pie_chart_size"
        android:background="@color/mtg_deck_pie_chart_background_color"
        mtg:whitePercentage="16.67"
        mtg:bluePercentage="16.67"
        mtg:blackPercentage="16.67"
        mtg:redPercentage="16.67"
        mtg:greenPercentage="16.67"
        android:layout_marginEnd="@dimen/mtg_deck_pie_chart_margin_end"/>
    <TextView
        android:id="@+id/deckName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/deck_list_deck_name_text_size"
        android:textStyle="bold"
        android:layout_toEndOf="@id/deckPieChart"
        android:text="@string/deck_list_deck_name_placeholder" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/deckPieChart"
        android:layout_below="@id/deckName"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/deckExtraInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/deck_extra_info_text_size"
            android:textStyle="italic"
            android:text="@string/deck_extra_info"/>
    </LinearLayout>
</RelativeLayout>