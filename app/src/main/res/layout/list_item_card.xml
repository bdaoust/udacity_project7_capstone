<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/card_list_item_width"
        android:layout_height="@dimen/card_list_item_height"
        android:padding="@dimen/card_list_item_padding"
        tools:ignore="UselessParent">

        <!-- ContentDescription is ignored since it is set in the code instead -->
        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/cardNumbCopies"
            android:layout_width="@dimen/card_list_item_numb_copies_width"
            android:layout_height="@dimen/card_list_item_numb_copies_height"
            android:layout_marginStart="@dimen/card_list_item_numb_copies_margin"
            android:layout_marginTop="@dimen/card_list_item_numb_copies_margin"
            android:background="@drawable/card_numb_copies_background"
            android:gravity="center"
            android:text="@string/card_list_item_numb_copies_placeholder"
            android:textColor="@color/card_list_item_numb_copies_text_color"
            android:textSize="@dimen/card_list_item_numb_copies_text_size"
            android:textStyle="bold" />

    </FrameLayout>
</LinearLayout>