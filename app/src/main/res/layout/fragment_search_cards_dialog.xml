<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/create_deck_dialog_padding"
    android:paddingRight="@dimen/create_deck_dialog_padding"

    android:paddingTop="0dp"
    app:theme="@style/OtherColorAccentTheme">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/inputCardName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Card Name"
        android:textSize="@dimen/create_deck_input_text_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchCardsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>