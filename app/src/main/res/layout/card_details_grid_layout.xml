<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:background="@color/card_details_grid_layout_background_color"
    android:padding="@dimen/card_details_gridlayout_padding">

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_name" />

    <TextView
        android:id="@+id/cardName"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_name_placeholder" />

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_quantity" />

    <TextView
        android:id="@+id/cardQuantity"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_quantity_placeholder" />

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_converted_mana_cost" />

    <TextView
        android:id="@+id/cardCMC"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_cmc_placeholder" />

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_types" />

    <TextView
        android:id="@+id/cardTypes"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_types_placeholder" />

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_oracle_text" />

    <TextView
        android:id="@+id/cardOracleText"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_oracle_text_placeholder" />

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_flavor_text" />

    <TextView
        android:id="@+id/cardFlavorText"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="@string/card_details_flavor_text_placeholder" />

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_power_toughness" />

    <TextView
        android:id="@+id/cardPowerToughness"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_power_toughness_placeholder" />

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_loyalty" />

    <TextView
        android:id="@+id/cardLoyalty"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_loyalty_placeholder" />

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_expansion" />

    <TextView
        android:id="@+id/cardExpansion"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_expansion_placeholder" />

    <TextView
        style="@style/CardDetailsGridLabelItem"
        android:layout_width="@dimen/card_details_text_label_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_label_artist" />

    <TextView
        android:id="@+id/cardArtist"
        style="@style/CardDetailsGridItem"
        android:layout_width="@dimen/card_details_text_value_width"
        android:layout_height="wrap_content"
        android:text="@string/card_details_artist_placeholder" />

</GridLayout>