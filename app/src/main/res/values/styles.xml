<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Hide the ActionBar so that the AppTheme can still depend on the Theme.AppCompat.Light.DarkActionBar for the purposes
        of styling the Toolbar. Based on the following solution: http://stackoverflow.com/questions/26503149/how-do-i-style-appcompat-v7-toolbar-like-theme-appcompat-light-darkactionbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_36dp</item>
    </style>

    <style name="EditScreenTheme" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_clear_white_36dp</item>
    </style>

    <style name="OtherColorAccentTheme" parent="AppTheme">
        <item name="colorAccent">@color/otherColorAccent</item>
    </style>

    <style name="CardDetailsGridItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/card_details_grid_item_margin_bottom</item>
    </style>

    <style name="CardDetailsGridLabelItem" parent="CardDetailsGridItem">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">@dimen/card_details_grid_label_item_margin_end</item>
    </style>

    <style name="IconButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:scaleType">center</item>
        <item name="android:tint">@color/icon_button_tint_color</item>
        <item name="android:background">@drawable/icon_button_touch_selector</item>
    </style>

    <style name="WidgetColorInfoItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/widget_color_info_item_margin_end</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WidgetColorInfoItemText">
        <item name="android:layout_marginStart">@dimen/widget_color_info_item_text_margin_start</item>
        <item name="android:textSize">@dimen/widget_color_info_item_text_size</item>
    </style>

</resources>
