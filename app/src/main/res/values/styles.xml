<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OtherColorAccentTheme" parent="AppTheme">
        <item name="colorAccent">@color/otherColorAccent</item>
    </style>

    <style name="CardDetailsGridItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/card_details_grid_item_margin_bottom</item>
    </style>

    <style name="CardDetailsGridLabelItem" parent="CardDetailsGridItem">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">@dimen/card_details_grid_label_item_margin_end</item>
    </style>

    <style name="IconButton">
        <item name="android:scaleType">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/icon_button_tint_color</item>
    </style>
</resources>
